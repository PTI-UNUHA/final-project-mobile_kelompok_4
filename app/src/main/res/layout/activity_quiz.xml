<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#030321"
    android:padding="20dp">

    <!-- TIMER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jam"
            android:textColor="#FF5555"
            android:textSize="22sp"
            android:textStyle="bold"
            android:contentDescription="Timer soal" />
    </LinearLayout>

    <!-- NOMOR SOAL -->
    <TextView
        android:id="@+id/tvNomorSoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pertanyaan 3/10"
        android:textColor="#EFEBEB"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <!-- BOX CODE -->
    <LinearLayout
        android:id="@+id/boxKode"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_code_box"
        android:padding="16dp"
        android:orientation="vertical"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/tvKodeSoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atribut yang digunakan untuk menentukan alamat gambar pada tag &lt;img&gt; adalah?"
            android:textColor="#EDEDED"
            android:textSize="15sp"
            android:fontFamily="monospace" />
    </LinearLayout>

    <!-- SOAL -->
    <TextView
        android:id="@+id/tvSoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Atribut apa yang benar untuk mengisi sumber gambar? (isi di kolom yang tersedia)"
        android:textColor="#D8D8D8"
        android:textSize="14sp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnsrc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="src" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        tools:ignore="ExtraText">

        <Button
            android:id="@+id/btnHref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HREF"/>
    </LinearLayout>

    <!-- TOMBOL HINT & KESEMPATAN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        tools:ignore="ExtraText">

        <Button
            android:id="@+id/btnHint"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/bg_hint"
            android:text="ðŸ’¡ Hint (1)"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="20dp" />

        <Button
            android:id="@+id/btnKesempatan"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/bg_hint"
            android:text="Kesempatan (1)"
            android:textColor="#FFFFFF"
            android:layout_marginStart="10dp"
            android:paddingHorizontal="20dp" />
    </LinearLayout>

    <!-- SUBMIT -->
    <!-- SUBMIT -->

    <!-- TAMBAHKAN KODE INI -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_submit"
        android:layout_marginBottom="1dp"
        android:text="SUBMIT"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#0B0E12"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            app:tint="#5DECF9" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_courses"
            app:tint="#8A98A9" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_profile"
            app:tint="#8A98A9" />

    </LinearLayout>


</LinearLayout>
